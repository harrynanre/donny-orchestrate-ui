{
  "hooks": [
    {
      "name": "log-tool-usage",
      "trigger": "after-tool",
      "script": "./log-tool-usage.sh",
      "enabled": true
    },
    {
      "name": "validate-commit",
      "trigger": "before-commit",
      "script": "./validate-commit.sh",
      "enabled": false
    }
  ],
  "config": {
    "logFile": ".claude/logs/tool-usage.log",
    "maxLogSize": "10MB",
    "rotateCount": 5
  }
}